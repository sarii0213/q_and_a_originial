<% provide :title, '質問一覧' %>
<div class="card">
  <div class="card-body">
    <table class="table">
      <thead>
      <tr>
        <th style="width: 10px">#</th>
        <th><%= Question.human_attribute_name(:title) %></th>
        <th style="width: 100px"></th>
      </tr>
      </thead>
      <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td>
            <%= question.id %>
          </td>
          <td>
            <%= question.title %>
          </td>
          <td>
            <%= link_to '削除', admin_question_path(question), class: 'btn btn-block btn-outline-primary', method: :delete, data: { confirm: '削除しますか？' } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <!-- /.table -->
  </div>
  <!-- /.card-body -->

</div>
