<%= form_with model: @user do |f| %>

  <%= f.label :name, '名前' %>
  <%= f.text_field :name %>

  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_field :email %>

  <%= f.label :image, '画像アップロード' %>
  <%= f.file_field :image %>

  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, 'パスワード確認' %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>

<% end %>